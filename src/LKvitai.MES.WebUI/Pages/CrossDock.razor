@page "/warehouse/cross-dock"
@inject AdvancedWarehouseClient AdvancedClient
@inject ToastService ToastService
@using LKvitai.MES.WebUI.Infrastructure

<PageTitle>Cross-Dock - LKvitai.MES</PageTitle>

<h3>Cross-Dock Tracking</h3>

@if (_error is not null)
{
    <ErrorBanner Message="@_error.UserMessage"
                 TraceId="@_error.TraceId"
                 OnRetry="LoadAsync"
                 OnDismiss="DismissError" />
}

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <h5>Create Cross-Dock Match</h5>
        <div class="row g-2 align-items-end">
            <div class="col-md-3">
                <label class="form-label">Inbound Shipment Id</label>
                <input class="form-control" @bind="_inboundId" placeholder="GUID" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Outbound Order Id</label>
                <input class="form-control" @bind="_outboundId" placeholder="GUID" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Item Id</label>
                <input class="form-control" type="number" @bind="_itemId" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Qty</label>
                <input class="form-control" type="number" step="0.01" @bind="_qty" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary w-100" @onclick="CreateAsync" disabled="_isBusy">Create</button>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Cross-Dock Queue</h5>
            <button class="btn btn-outline-secondary btn-sm" @onclick="LoadAsync" disabled="_isBusy">Refresh</button>
        </div>

        @if (_rows.Count == 0)
        {
            <EmptyState Title="No cross-dock records"
                        Message="Create a match to route inbound stock directly to outbound shipping."
                        IconCss="bi bi-arrow-left-right"
                        OnAction="LoadAsync" />
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>Number</th>
                            <th>Item</th>
                            <th>Qty</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var row in _rows)
                        {
                            <tr>
                                <td>@row.CrossDockNumber</td>
                                <td>@row.ItemId</td>
                                <td>@row.Qty</td>
                                <td><span class="badge bg-secondary">@row.Status</span></td>
                                <td>@row.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="d-flex gap-1">
                                    <button class="btn btn-sm btn-outline-success" @onclick='() => SetStatusAsync(row.Id, "MATCHED")'>Match</button>
                                    <button class="btn btn-sm btn-outline-primary" @onclick='() => SetStatusAsync(row.Id, "COMPLETED")'>Complete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@code {
    private readonly List<CrossDockDto> _rows = [];
    private string _inboundId = string.Empty;
    private string _outboundId = string.Empty;
    private int _itemId = 1;
    private decimal _qty = 1;
    private ApiException? _error;
    private bool _isBusy;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        await ExecuteAsync(async () =>
        {
            var rows = await AdvancedClient.GetCrossDocksAsync();
            _rows.Clear();
            _rows.AddRange(rows);
        });
    }

    private async Task CreateAsync()
    {
        if (!Guid.TryParse(_inboundId, out var inboundId) || !Guid.TryParse(_outboundId, out var outboundId))
        {
            ToastService.ShowError("Inbound and outbound IDs must be valid GUID values.");
            return;
        }

        await ExecuteAsync(async () =>
        {
            await AdvancedClient.CreateCrossDockAsync(new CrossDockCreateRequestDto(inboundId, outboundId, _itemId, _qty));
            ToastService.ShowSuccess("Cross-dock record created.");
            _inboundId = string.Empty;
            _outboundId = string.Empty;
            await LoadAsync();
        });
    }

    private async Task SetStatusAsync(Guid id, string status)
    {
        await ExecuteAsync(async () =>
        {
            await AdvancedClient.UpdateCrossDockStatusAsync(id, status);
            await LoadAsync();
        });
    }

    private async Task ExecuteAsync(Func<Task> action)
    {
        _isBusy = true;
        _error = null;

        try
        {
            await action();
        }
        catch (ApiException ex)
        {
            _error = ex;
            ToastService.ShowError(ex.UserMessage);
        }
        finally
        {
            _isBusy = false;
        }
    }

    private void DismissError()
    {
        _error = null;
    }
}
