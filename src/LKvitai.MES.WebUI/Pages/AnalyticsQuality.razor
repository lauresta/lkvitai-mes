@page "/analytics/quality"
@inject AdvancedWarehouseClient AdvancedClient
@inject ToastService ToastService
@using LKvitai.MES.WebUI.Infrastructure

<PageTitle>Quality Analytics - LKvitai.MES</PageTitle>

<h3>QC Defects & Late Shipments</h3>

@if (_error is not null)
{
    <ErrorBanner Message="@_error.UserMessage"
                 TraceId="@_error.TraceId"
                 OnRetry="LoadAsync"
                 OnDismiss="DismissError" />
}

<div class="row g-3 mb-3">
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-muted">QC Defect Count</div>
                <div class="display-6">@(_analytics?.DefectCount ?? 0)</div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="text-muted">Late Shipments</div>
                <div class="display-6">@(_analytics?.LateShipmentsCount ?? 0)</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-5">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">Top Defect Types</h5>
                    <button class="btn btn-outline-secondary btn-sm" @onclick="LoadAsync" disabled="isBusy">Refresh</button>
                </div>

                @if (_analytics is null || _analytics.DefectsByType.Count == 0)
                {
                    <EmptyState Title="No defects recorded"
                                Message="Defect analytics appears when QC defects are logged."
                                IconCss="bi bi-shield-check"
                                OnAction="LoadAsync" />
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in _analytics.DefectsByType)
                                {
                                    <tr>
                                        <td>@row.DefectType</td>
                                        <td>@row.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5>Late Shipment Root Causes</h5>
                @if (_analytics is null || _analytics.LateShipments.Count == 0)
                {
                    <EmptyState Title="No late shipments"
                                Message="No delayed outbound orders found in current dataset."
                                IconCss="bi bi-truck"
                                OnAction="LoadAsync" />
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Order</th>
                                    <th>Requested</th>
                                    <th>Shipped</th>
                                    <th>Root Cause</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var row in _analytics.LateShipments)
                                {
                                    <tr>
                                        <td>@row.OrderNumber</td>
                                        <td>@(row.RequestedShipDate?.ToLocalTime().ToString("yyyy-MM-dd") ?? "-")</td>
                                        <td>@(row.ShippedAt?.ToLocalTime().ToString("yyyy-MM-dd") ?? "-")</td>
                                        <td>@row.RootCause</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private QcLateShipmentAnalyticsDto? _analytics;
    private ApiException? _error;
    private bool _isBusy;

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _isBusy = true;
        _error = null;

        try
        {
            _analytics = await AdvancedClient.GetQcLateShipmentAnalyticsAsync();
        }
        catch (ApiException ex)
        {
            _error = ex;
            ToastService.ShowError(ex.UserMessage);
        }
        finally
        {
            _isBusy = false;
        }
    }

    private void DismissError()
    {
        _error = null;
    }
}
