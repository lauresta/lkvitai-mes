@if (!LagSeconds.HasValue)
{
    <span class="badge bg-secondary">Unknown</span>
}
else if (LagSeconds.Value < WarnSeconds)
{
    <span class="badge bg-success">Fresh</span>
}
else if (LagSeconds.Value < AlertSeconds)
{
    <span class="badge bg-warning text-dark">Lagging</span>
}
else
{
    <span class="badge bg-danger">Stale</span>
}

@code {
    [Parameter]
    public double? LagSeconds { get; set; }

    [Parameter]
    public double WarnSeconds { get; set; } = 5;

    [Parameter]
    public double AlertSeconds { get; set; } = 30;
}
