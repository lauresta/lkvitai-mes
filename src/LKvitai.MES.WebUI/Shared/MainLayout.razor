        <NavMenu />
    </nav>

    <div class="flex-grow-1">
        <header class="navbar navbar-light bg-light border-bottom px-3">
            <span class="navbar-brand mb-0 h1">LKvitai.MES Warehouse</span>
            <span class="text-muted small">@Environment.EnvironmentName</span>
