@inherits LayoutComponentBase
@inject IWebHostEnvironment Environment

<MudLayout>
    <MudDrawer Class="sidebar bg-dark text-white"
               Variant="DrawerVariant.Responsive"
               Width="250px"
               Elevation="1"
               Open="true">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <header class="app-topbar bg-light border-bottom px-3">
            <h6 class="mb-0">LKvitai.MES Warehouse</h6>
            <div class="flex-grow-1"></div>
            <span class="text-muted small me-3">@Environment.EnvironmentName</span>
            <button class="btn btn-outline-secondary btn-sm" type="button" disabled>Login</button>
        </header>

        <main class="container-fluid p-4 position-relative">
            <ToastContainer />
            @Body
        </main>
    </MudMainContent>
</MudLayout>
