@page "/reports/receiving-history"
@inject ReportsClient ReportsClient
@inject IJSRuntime JavaScript
@inject ToastService ToastService

<PageTitle>Receiving History - LKvitai.MES</PageTitle>

<h3>Receiving History Report</h3>

@if (_apiError is not null)
{
    <ErrorBanner Message="@BuildErrorMessage(_apiError)"
                 TraceId="@_apiError.TraceId"
                 OnRetry="LoadAsync"
                 OnDismiss="@(() => _apiError = null)" />
}

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-2 align-items-end">
            <div class="col-md-2">
                <label class="form-label">Supplier Id</label>
                <input class="form-control" type="number" @bind="_supplierId" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select class="form-select" @bind="_status">
                    <option value="">All</option>
                    <option value="Draft">Draft</option>
                    <option value="Partial">Partial</option>
                    <option value="Complete">Complete</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Expected From</label>
                <input class="form-control" type="date" @bind="_dateFrom" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Expected To</label>
                <input class="form-control" type="date" @bind="_dateTo" />
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary" @onclick="ApplyFiltersAsync">Apply</button>
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-outline-secondary" @onclick="ExportCsvAsync">Export CSV</button>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm position-relative">
    <LoadingSpinner IsLoading="@_isLoading" />
    <div class="card-body">
        <div class="mb-2"><strong>Total: @_totalCount</strong></div>
        <div class="table-responsive">
            <table class="table table-sm table-hover align-middle">
                <thead>
                <tr>
                    <th>Shipment Id</th>
                    <th>Reference</th>
                    <th>Supplier</th>
                    <th>Expected</th>
                    <th>Status</th>
                    <th>Expected Qty</th>
                    <th>Received Qty</th>
                </tr>
                </thead>
                <tbody>
                @if (_items.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="text-muted">No rows found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var row in _items)
                    {
                        <tr>
                            <td>@row.Id</td>
                            <td>@row.ReferenceNumber</td>
                            <td>@row.SupplierName</td>
                            <td>@row.ExpectedDate?.ToString("yyyy-MM-dd")</td>
                            <td>@row.Status</td>
                            <td>@row.TotalExpectedQty</td>
                            <td>@row.TotalReceivedQty</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>

        @if (_totalCount > 0)
        {
            <Pagination CurrentPage="@_pageNumber"
                        TotalPages="@TotalPages"
                        PageSize="@_pageSize"
                        OnPageChanged="OnPageChangedAsync"
                        OnPageSizeChanged="OnPageSizeChangedAsync" />
        }
    </div>
</div>

@code {
    private readonly List<ReceivingHistoryRowDto> _items = [];
    private ApiException? _apiError;
    private bool _isLoading;
    private int _pageNumber = 1;
    private int _pageSize = 50;
    private int _totalCount;

    private int? _supplierId;
    private string? _status;
    private DateTime? _dateFrom;
    private DateTime? _dateTo;

    private int TotalPages => Math.Max(1, (int)Math.Ceiling(_totalCount / (double)Math.Max(1, _pageSize)));

    protected override async Task OnInitializedAsync()
    {
        await LoadAsync();
    }

    private async Task ApplyFiltersAsync()
    {
        _pageNumber = 1;
        await LoadAsync();
    }

    private async Task LoadAsync()
    {
        _isLoading = true;
        _apiError = null;

        try
        {
            var dateFrom = ParseDate(_dateFrom);
            var dateTo = ParseDate(_dateTo);

            var response = await ReportsClient.GetReceivingHistoryAsync(
                _supplierId,
                _status,
                dateFrom,
                dateTo,
                _pageNumber,
                _pageSize);

            _items.Clear();
            _items.AddRange(response.Items);
            _totalCount = response.TotalCount;
        }
        catch (ApiException ex)
        {
            _apiError = ex;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task OnPageChangedAsync(int page)
    {
        _pageNumber = Math.Max(1, page);
        await LoadAsync();
    }

    private async Task OnPageSizeChangedAsync(int size)
    {
        _pageSize = Math.Clamp(size, 1, 1000);
        _pageNumber = 1;
        await LoadAsync();
    }

    private async Task ExportCsvAsync()
    {
        try
        {
            var bytes = await ReportsClient.DownloadReceivingHistoryCsvAsync(
                _supplierId,
                _status,
                ParseDate(_dateFrom),
                ParseDate(_dateTo));

            await JavaScript.InvokeVoidAsync(
                "csvExport.downloadBytes",
                "receiving-history-report.csv",
                "text/csv",
                Convert.ToBase64String(bytes));
        }
        catch (ApiException ex)
        {
            _apiError = ex;
            ToastService.ShowError(BuildErrorMessage(ex));
        }
    }

    private static DateOnly? ParseDate(DateTime? value)
    {
        return value.HasValue
            ? DateOnly.FromDateTime(value.Value.Date)
            : null;
    }

    private static string BuildErrorMessage(ApiException error)
    {
        if (!string.IsNullOrWhiteSpace(error.ProblemDetails?.Detail))
        {
            return $"{error.UserMessage} {error.ProblemDetails.Detail}";
        }

        return error.UserMessage;
    }
}
