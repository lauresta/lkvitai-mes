@page "/admin/warehouses"
@inject MasterDataAdminClient AdminClient
@inject ToastService ToastService

<PageTitle>Admin Warehouses - LKvitai.MES</PageTitle>

<h3>Warehouses Management</h3>

@if (_apiError is not null)
{
    <ErrorBanner Message="@BuildErrorMessage(_apiError)"
                 TraceId="@_apiError.TraceId"
                 OnRetry="ReloadAsync"
                 OnDismiss="@(() => _apiError = null)" />
}

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input class="form-control" @bind="_search" placeholder="Code, name, description" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select class="form-select" @bind="_status">
                    <option value="">All</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-center">
                <div class="form-check mt-4">
                    <input class="form-check-input" type="checkbox" @bind="_includeVirtual" />
                    <label class="form-check-label">Include virtual warehouses</label>
                </div>
            </div>
            <div class="col-md-2 d-grid">
                <button class="btn btn-primary" @onclick="ApplyFiltersAsync">Filter</button>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-3 position-relative">
    <LoadingSpinner IsLoading="@_isLoading" />
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <strong>Total: @_totalCount</strong>
            <button class="btn btn-sm btn-outline-primary" @onclick="@(() => _showCreate = !_showCreate)">
                @(_showCreate ? "Hide Create Form" : "Create Warehouse")
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-sm table-hover align-middle">
                <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Virtual</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @if (_warehouses.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="text-muted">No warehouses found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var row in _warehouses)
                    {
                        <tr>
                            <td>@row.Code</td>
                            <td>@row.Name</td>
                            <td>@(string.IsNullOrWhiteSpace(row.Description) ? "-" : row.Description)</td>
                            <td>@(row.IsVirtual ? "Yes" : "No")</td>
                            <td>@row.Status</td>
                            <td>@row.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="text-end">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => BeginEdit(row))">Edit</button>
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>

        @if (_totalCount > 0)
        {
            <Pagination CurrentPage="@_pageNumber"
                        TotalPages="@TotalPages"
                        PageSize="@_pageSize"
                        OnPageChanged="OnPageChangedAsync"
                        OnPageSizeChanged="OnPageSizeChangedAsync" />
        }
    </div>
</div>

@if (_showCreate)
{
    <div class="card shadow-sm mb-3">
        <div class="card-header">Create Warehouse</div>
        <div class="card-body">
            <div class="row g-2">
                <div class="col-md-2">
                    <label class="form-label">Code</label>
                    <input class="form-control" @bind="_create.Code" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Name</label>
                    <input class="form-control" @bind="_create.Name" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Description</label>
                    <input class="form-control" @bind="_create.Description" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="_create.Status">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" @bind="_create.IsVirtual" />
                        <label class="form-check-label">Virtual</label>
                    </div>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button class="btn btn-primary px-4" @onclick="CreateAsync" disabled="@_isSaving">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@if (_editing is not null)
{
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Edit Warehouse: @_editing.Code</span>
            <button class="btn btn-sm btn-outline-secondary" @onclick="@(() => _editing = null)">Close</button>
        </div>
        <div class="card-body">
            <div class="row g-2">
                <div class="col-md-2">
                    <label class="form-label">Code</label>
                    <input class="form-control" @bind="_editing.Code" disabled />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Name</label>
                    <input class="form-control" @bind="_editing.Name" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Description</label>
                    <input class="form-control" @bind="_editing.Description" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="_editing.Status">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" @bind="_editing.IsVirtual" />
                        <label class="form-check-label">Virtual</label>
                    </div>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button class="btn btn-primary px-4" @onclick="UpdateAsync" disabled="@_isSaving">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private readonly List<AdminWarehouseDto> _warehouses = [];

    private string? _search;
    private string? _status;
    private bool _includeVirtual = true;
    private int _pageNumber = 1;
    private int _pageSize = 50;
    private int _totalCount;
    private bool _isLoading;
    private bool _isSaving;
    private bool _showCreate;
    private ApiException? _apiError;

    private WarehouseFormModel _create = new();
    private WarehouseEditFormModel? _editing;

    private int TotalPages => Math.Max(1, (int)Math.Ceiling(_totalCount / (double)Math.Max(1, _pageSize)));

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        _isLoading = true;
        _apiError = null;

        try
        {
            await LoadWarehousesAsync();
        }
        catch (ApiException ex)
        {
            _apiError = ex;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ApplyFiltersAsync()
    {
        _pageNumber = 1;
        await LoadWarehousesAsync();
    }

    private async Task LoadWarehousesAsync()
    {
        var result = await AdminClient.GetWarehousesAsync(
            _search,
            _status,
            _includeVirtual,
            _pageNumber,
            _pageSize);

        _warehouses.Clear();
        _warehouses.AddRange(result.Items);
        _totalCount = result.TotalCount;
    }

    private async Task OnPageChangedAsync(int page)
    {
        _pageNumber = Math.Max(1, page);
        await LoadWarehousesAsync();
    }

    private async Task OnPageSizeChangedAsync(int size)
    {
        _pageSize = Math.Clamp(size, 1, 500);
        _pageNumber = 1;
        await LoadWarehousesAsync();
    }

    private async Task CreateAsync()
    {
        if (_isSaving)
        {
            return;
        }

        try
        {
            _isSaving = true;
            _apiError = null;
            await AdminClient.CreateWarehouseAsync(_create.ToRequest());
            ToastService.ShowSuccess("Warehouse created.");
            _create = new WarehouseFormModel();
            await LoadWarehousesAsync();
        }
        catch (ApiException ex)
        {
            _apiError = ex;
            ToastService.ShowError(BuildErrorMessage(ex));
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void BeginEdit(AdminWarehouseDto row)
    {
        _editing = new WarehouseEditFormModel
        {
            Id = row.Id,
            Code = row.Code,
            Name = row.Name,
            Description = row.Description,
            IsVirtual = row.IsVirtual,
            Status = row.Status
        };
    }

    private async Task UpdateAsync()
    {
        if (_editing is null || _isSaving)
        {
            return;
        }

        try
        {
            _isSaving = true;
            _apiError = null;
            await AdminClient.UpdateWarehouseAsync(_editing.Id, _editing.ToRequest());
            ToastService.ShowSuccess("Warehouse updated.");
            _editing = null;
            await LoadWarehousesAsync();
        }
        catch (ApiException ex)
        {
            _apiError = ex;
            ToastService.ShowError(BuildErrorMessage(ex));
        }
        finally
        {
            _isSaving = false;
        }
    }

    private static string BuildErrorMessage(ApiException error)
    {
        if (!string.IsNullOrWhiteSpace(error.ProblemDetails?.Detail))
        {
            return $"{error.UserMessage} {error.ProblemDetails.Detail}";
        }

        return error.UserMessage;
    }

    private class WarehouseFormModel
    {
        public string Code { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
        public bool IsVirtual { get; set; }
        public string Status { get; set; } = "Active";

        public CreateOrUpdateWarehouseRequest ToRequest() => new(
            Code,
            Name,
            Description,
            IsVirtual,
            Status);
    }

    private sealed class WarehouseEditFormModel : WarehouseFormModel
    {
        public Guid Id { get; set; }
    }
}
